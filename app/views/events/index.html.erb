<div class="position-relative">
  <div class="carousel slide" data-ride="carousel" data-interval="5000">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= image_path "banner.jpg" %>">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= image_path "banner2.jpg" %>">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="<%= image_path "banner3.jpg" %>">
      </div>
    </div>
  </div>
  <div class="container position-absolute search-container">
    <h2>Cook. Share. Love</h2>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscin, sed do eiusmod tempor.</p>
    <%= simple_form_for :search, url: events_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :search, input_html: { value: "" }, label: false, placeholder: "Chinese" %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="container my-5">
  <h4>Latest events</h4>
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card my-3">
          <div class="card-img-top" style="background-image: url('<%= cl_image_path event.image %>')"></div>
          <div class="card-body">
            <h5>
              <%= link_to event.title, event_path(event.id)%>
            </h5>
            <p><%= event.location %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>