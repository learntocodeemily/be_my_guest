<div class="banner" style="background-image: url(<%= image_path "banner" %>);">
  <div class="container">
    <h2>Cook. Share. Love</h2>
    <p>Lorem ipsum dolor sit amet, consectetur adipiscin, sed do eiusmod tempor.</p>
  </div>
</div>

<div class="container my-5">

  <h4>Latest events</h4>

  <div class="row">
    <% @events.each do |event| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card my-3">
          <div class="card-img-top" style="background-image: url('<%= cl_image_path event.image %>')"></div>
          <div class="card-body">
            <h5>
              <%= link_to event.title, event_path(event.id)%>
            </h5>
            <p><%= event.location %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- only signed in user can create an event -->
  <% if user_signed_in? %>
    <%= link_to "new", new_event_path%>
  <% end %>

</div>
